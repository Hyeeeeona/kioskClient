<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp">


    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_menu_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/linear_layout"
        android:src="@drawable/coffee"
        tools:ignore="MissingConstraints" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_menu_image"
        android:focusable="false"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_menuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/iv_menu_image"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="아메리카노"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_menuTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Hot Only"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/tv_menuSize_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="* S : 5000원"
            android:textSize="15dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_menuSize_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="* M : 6000원"
            android:textSize="15dp"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_menuSize_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="* L : 7000원"
            android:textSize="15dp"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
