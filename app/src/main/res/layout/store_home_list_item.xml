<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_menuName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="아메리카노"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/tv_menuTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Hot Only"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/tv_menuSize_S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="* S : 5000원"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/tv_menuSize_M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="* M : 6000원"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/tv_menuSize_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="* L : 7000원"
            android:textSize="15dp"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
