<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:padding="15dp"
                android:text="@string/title_payment"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blank">
            </LinearLayout>

            <TextView
                android:id="@+id/payment_store_name"
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:padding="10dp"
                android:text="매장이름"
                android:textSize="25dp"
                android:gravity="left"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/payment_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴 이름 외 3건"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/payment_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="XX원"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:paddingRight="30dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cart_item_menu_name"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blank">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginBottom="3dp"
                android:padding="10dp"
                android:text="도착시간 설정"
                android:textSize="25dp"
                android:gravity="left"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/time_0m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="0분"/>
                <RadioButton
                    android:id="@+id/time_30m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="30분"/>
                <RadioButton
                    android:id="@+id/time_1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="1시간"/>
                <RadioButton
                    android:id="@+id/time_2h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="2시간"/>

            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="기타 : "/>
                <EditText
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="분"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blank">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="요청사항"
                android:textSize="25dp"
                android:gravity="left"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입력 : "
                    android:textSize="20dp"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:id="@+id/payment_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛있게 만들어 주세요"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/blank">
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="결제방식"
                android:textSize="25dp"
                android:gravity="left"
                android:textColor="#000000"
                android:background="#FFFFFF"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/payment_button"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:text="결제"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>